{
  "bindings": [
    {
      "name": "req",
      "direction": "in",
      "type": "httpTrigger",
      "authLevel": "function",
      "route": "v13/desks/{deskId}/drafts",
      "methods": [
        "get"
      ]
    },
    {
      "name": "res",
      "direction": "out",
      "type": "http"
    },
    {
      "name": "draftDocuments",
      "direction": "in",
      "type": "cosmosDB",
      "databaseName": "v1.2",
      "collectionName": "drafts",
      "connectionStringSetting": "thedeskapp_DOCUMENTDB",
      "partitionKey": "{deskId}",
      "sqlQuery": "SELECT * FROM c WHERE c.deskId={deskId}"
    }
  ]
}