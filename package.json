{
  "name": "mediumdesk",
  "productName": "MediumDesk",
  "version": "2.0.1",
  "description": "Minimal Desktop App for Medium developed by Medium enthusiasts",
  "main": "main.js",
  "bin": "cli.js",
  "license": "CC0-1.0",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder -mw"
  },
  "repository": "https://github.com/sivahq/mediumdesk-v2",
  "author": "Clove Inc.",
  "devDependencies": {
    "@octokit/rest": "^16.3.2",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "check-for-leaks": "^1.2.1",
    "electron": "^9.1.2",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^1.0.0",
    "electron-packager": "^15.0.0",
    "eslint": "^7.5.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.0.2",
    "prettier": "2.0.5",
    "request": "^2.70.0",
    "rimraf": "^2.5.2",
    "signcode": "^0.5.0",
    "spectron": "^5.0.0",
    "tap": "^14.10.6"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "electron-find": "^1.0.6",
    "electron-log": "^4.2.2",
    "electron-settings": "^4.0.2",
    "electron-shortcut-normalizer": "^1.0.0",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "glob": "^7.1.0",
    "update-electron-app": "^1.5.0"
  },
  "build": {
    "appId": "com.clovecrypto.MediumDesk",
    "productName": "MediumDesk",
    "mac": {
      "category": "public.app-category.utilities",
      "type": "distribution",
      "hardenedRuntime": true,
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/app-icon/mac/app.icns",
      "entitlements": "assets/mac/entitlements.mac.plist",
      "entitlementsInherit": "assets/mac/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app-icon/win/app.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "sivahq",
        "repo": "mediumdesk-v2",
        "token": "c425bcee75779c0c29891512377033d2a2a9cbd8"
      }
    ],
    "afterSign": "script/notarize.js"
  }
}
