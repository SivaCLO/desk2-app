{
  "name": "thedeskapp",
  "productName": "Desk for Medium.com",
  "version": "1.0.6",
  "description": "Desktop App for Medium.com",
  "main": "main.js",
  "bin": "cli.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "release": "electron-builder -mlw"
  },
  "devDependencies": {
    "@octokit/rest": "^16.3.2",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "check-for-leaks": "^1.2.1",
    "electron": "^9.3.0",
    "electron-builder": "^22.8.0",
    "electron-notarize": "^1.0.0",
    "electron-packager": "^15.0.0",
    "eslint": "^7.5.0",
    "husky": "^0.14.3",
    "npm-run-all": "^4.0.2",
    "prettier": "2.0.5",
    "request": "^2.70.0",
    "rimraf": "^2.5.2",
    "signcode": "^0.5.0",
    "spectron": "^5.0.0",
    "tap": "^14.10.6"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "bootstrap": "^4.5.2",
    "bootstrap-icons": "^1.0.0",
    "electron-find": "^1.0.6",
    "electron-log": "^4.2.2",
    "electron-settings": "^4.0.2",
    "electron-shortcut-normalizer": "^1.0.0",
    "electron-store": "^6.0.0",
    "electron-updater": "^4.3.4",
    "glob": "^7.1.0",
    "jquery": "^3.5.1",
    "popper.js": "^1.16.1",
    "update-electron-app": "^1.5.0"
  },
  "build": {
    "appId": "co.thedesk.TheDeskApp",
    "productName": "Desk for Medium.com",
    "mac": {
      "category": "public.app-category.productivity",
      "type": "distribution",
      "hardenedRuntime": true,
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/app-icon/thedesk.icns",
      "entitlements": "assets/mac/entitlements.mac.plist",
      "entitlementsInherit": "assets/mac/entitlements.mac.inherit.plist",
      "gatekeeperAssess": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/app-icon/thedesk.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/app-icon/thedesk-512.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "thedeskco",
        "repo": "thedeskapp-releases",
        "token": "c425bcee75779c0c29891512377033d2a2a9cbd8"
      }
    ],
    "afterSign": "script/notarize.js"
  }
}
